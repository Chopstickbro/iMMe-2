<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#5fb0c9">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <TextView
                android:layout_below="@id/toolbar"
                android:id="@+id/login_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="22dp"
                android:gravity="center_horizontal"
                android:text="Upload Photo"
                android:textColor="#fff"
                android:textSize="26sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_title"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/mainuid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Picture 1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/photo_1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_below="@+id/mainuid"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_sign" />

                <TextView
                    android:id="@+id/text_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Picture 2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/photo_1"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/photo_2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_below="@+id/text_pic2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_sign"/>

                <TextView
                    android:id="@+id/text_pic3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Picture 3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/photo_2"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/photo_3"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_below="@+id/text_pic3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_sign"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/photo_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/photo_3"
                    android:layout_centerHorizontal="true"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:onClick="submit_Image"/>
            </RelativeLayout>

        </LinearLayout>



</ScrollView>
